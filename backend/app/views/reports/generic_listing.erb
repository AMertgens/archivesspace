<div class="header">
  <img class="logo" src="<%= @base_url || '/' %>reports/static/images/archivesspace.small.png"/>
  <h1><%= h @report.title %></h1>
</div>

<div class="titlepage">
  <div class="title"><%= @report.title %></div>

  <dl>
  <% @report.info.each do |key|value| %>
    <dt><% t(key) %></dt>
    <dd><% value %></dd>
  <% end %>
  </dl>
</div>

<% @report.each do |item| %>

  <div class="report-record">
    <div class="identifier"><%= @record.identifier(item) %></div>

    <dl>
      <%
        sub_reports = hash.new
        item.each do |key, value|
          sub_reports = hash.new
          if value.respond_to? :each
            sub_reports[key] = value
          else %>
            <dt><% t(key) %></dt>
            <dd><% value %></dd>
      <%
          end
        end
      %>
    </dl>

    <%
      sub_reports.each do |report_name, report_data|
        @report.format_sub_report(report_name, report_data)
      end
    %>

  </div>
<% end %>