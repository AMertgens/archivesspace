<% if result.json['names'].any? %>
  
  <% result.json['names'].each do |r| %>
    <dl class="dl-horizontal">

      <dt><%= I18n.t('name_person.is_display_name') %></dt>
      <dd><%= r['is_display_name'] %></dd>

      <dt><%= I18n.t('name_person.authorized') %></dt>
      <dd><%= r['authorized'] %></dd>

      <dt><%= I18n.t('name_person.source') %></dt>
      <dd><%= r['source'] %></dd>

      <% if r['rules'] %>
        <dt><%= I18n.t('name_person.rules') %></dt>
        <dd><%= I18n.t('enumerations.name_rule.' + r['rules']) %></dd>
      <% end %>

      <dt><%= I18n.t('name_person.name_order') %></dt>
      <dd><%= r['name_order'] %></dd>

      <dt><%= I18n.t('name_person.prefix') %></dt>
      <dd><%= r['prefix'] %></dd>

      <dt><%= I18n.t('name_person.title') %></dt>
      <dd><%= r['title'] %></dd>

      <dt><%= I18n.t('name_person.primary_name') %></dt>
      <dd><%= r['primary_name'] %></dd>

      <dt><%= I18n.t('name_person.rest_of_name') %></dt>
      <dd><%= r['rest_of_name'] %></dd>

      <dt><%= I18n.t('name_person.suffix') %></dt>
      <dd><%= r['suffix'] %></dd>

      <dt><%= I18n.t('name_person.fuller_form') %></dt>
      <dd><%= r['fuller_form'] %></dd>

      <dt><%= I18n.t('name_person.number') %></dt>
      <dd><%= r['number'] %></dd>

      <dt><%= I18n.t('name_person.dates') %></dt>
      <dd><%= r['dates'] %></dd>

      <dt><%= I18n.t('name_person.language') %></dt>
      <dd><%= r['language'] %></dd>

      <dt><%= I18n.t('name_person.script') %></dt>
      <dd><%= r['script'] %></dd>

      <dt><%= I18n.t('name_person.qualifier') %></dt>
      <dd><%= r['qualifier'] %></dd>

      <dt><%= I18n.t('name_person.sort_name') %></dt>
      <dd><%= r['sort_name'] %></dd>
    </dl>

    <% if r['parallel_names'].any? %>

	  	<% pn = render partial: 'parallel_name_person', locals: {:result => r['parallel_names']} %>
    	<%= render partial: 'shared/accordion_panel', locals: 
				{:p_title =>  t('parallel_name_person._plural'),
		 		 :p_id => "parallel_names_#{r['id']}",
		 		 :p_body => pn} %>
	  <% end %>

	  <% if r['use_dates'].any? %>

			<% ud = "" %>	  	
      <% r['use_dates'].each do |u| %>
		  	<% ud += render partial: 'structured_date', locals: {:result => u} %>
		  <% end %>

    	<%= render partial: 'shared/accordion_panel', locals: 
				{:p_title =>  I18n.t('use_date._plural'),
		 		 :p_id => "use_dates_#{r['id']}",
		 		 :p_body => ud.html_safe } %>
	  <% end %>
  <% end %>
<% end %>


