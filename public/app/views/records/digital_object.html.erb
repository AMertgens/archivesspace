<%
   record_title = @digital_object.title
   set_title(record_title)
%>
<%= render(:partial => 'title_pane', :formats => [:html], :handlers => [:erb],
           :locals => {:record_title => record_title}) 
%>
<div class="content-pane">
  <div class="row-fluid">
    <div class="span3">
      <%= render(:partial => 'navlist', :formats => [:html], :handlers => [:erb],
                 :locals => {
                   :record_type => 'digital_object',
                   :record => @digital_object,
                   :entries => [
                     {:property => 'published_file_versions', :subrecord_type => 'file_version', :anchor => 'file_versions'},
                     {:property => 'dates', :subrecord_type => 'date', :anchor => 'dates'},
                     {:property => 'extents', :subrecord_type => 'extent', :anchor => 'extents'},
                     {:property => 'published_agents', :subrecord_type => 'agent', :anchor => 'linked_agents'},
                     {:property => 'subjects', :subrecord_type => 'subject', :anchor => 'subjects'},
                     {:property => 'published_notes', :subrecord_type => 'note', :anchor => 'notes'},
                     {:property => 'published_linked_instances', :subrecord_type => 'instance', :anchor => 'linked_instances'},
                     {:property => 'published_external_documents', :subrecord_type => 'external_document', :anchor => 'external_documents'},
                     {:anchor => 'components', :label => I18n.t("digital_object._public.section.components")}
                   ]
                 })
       %>
    </div>
    <div class="span9">
      <fieldset class="form-horizontal">
        <section id="summary">
          <h3><%= I18n.t("digital_object._public.section.summary") %></h3>
          <dl class="dl-horizontal">
            <dt><%= I18n.t("digital_object.digital_object_id") %></dt>
            <dd class="identifier-display">
              <span class="identifier-display-part"><%= @digital_object['digital_object_id'] %></span>
            </dd>
          </dl>
        </section>

        <%= render :partial => "file_versions", :formats => [:html], :handlers => [:erb], :locals => {:file_versions => @digital_object.published_file_versions} %>
        <%= render :partial => "dates", :formats => [:html], :handlers => [:erb], :locals => {:dates => @digital_object['dates']} %>
        <%= render :partial => "extents", :formats => [:html], :handlers => [:erb], :locals => {:extents => @digital_object['extents']} %>
        <%= render :partial => "agents", :formats => [:html], :handlers => [:erb], :locals => {:linked_agents => @digital_object.published_agents} %>
        <%= render :partial => "subjects", :formats => [:html], :handlers => [:erb], :locals => {:subjects => @digital_object['subjects']} %>
        <%= render :partial => "notes", :formats => [:html], :handlers => [:erb], :locals => {:notes => @digital_object.published_notes} %>
        <%= render :partial => "external_documents", :formats => [:html], :handlers => [:erb], :locals => {:external_documents => @digital_object.published_external_documents} %>
        <%= render :partial => "linked_instances", :formats => [:html], :handlers => [:erb], :locals => {:records => @digital_object.published_linked_instances} %>
        <%= render :partial => "components", :formats => [:html], :handlers => [:erb], :locals => {
              :record_type => "digital_object",
              :root_uri => @digital_object.uri,
              :show_search => true
            } %>

      </fieldset>

      <br/>
      <br/>

    </div>
  </div>
</div>
