<div class="title-pane">
  <div class="row-fluid">
    <div class="span3">

    </div>
    <div class="span9">
      <h2><%= @archival_object.title %></h2>
    </div>
  </div>
</div>
<div class="content-pane">
  <div class="row-fluid">
    <div class="span3">
      <div id="">
        <ul class="nav nav-list as-nav-list" data-spy="affix">
          <li><a href="#summary"><%= I18n.t("archival_object._public.section.summary") %> <span class="icon-chevron-right"></span></a></li>
          <% if @archival_object['dates'].length > 0 %>
            <li><a href="#dates"><%= I18n.t("date._plural") %> <span class="badge badge-info"><%= @archival_object['dates'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object['extents'].length > 0 %>
            <li><a href="#extents"><%= I18n.t("extent._plural") %> <span class="badge badge-info"><%= @archival_object['extents'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object.published_agents.length > 0 %>
            <li><a href="#linked_agents"><%= I18n.t("agent._plural") %> <span class="badge badge-info"><%= @archival_object.published_agents.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object['subjects'].length > 0 %>
            <li><a href="#subjects"><%= I18n.t("subject._plural") %> <span class="badge badge-info"><%= @archival_object['subjects'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object['notes'].length > 0 %>
            <li><a href="#notes"><%= I18n.t("note._plural") %> <span class="badge badge-info"><%= @archival_object['notes'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object.published_external_documents.length > 0 %>
            <li><a href="#external_documents"><%= I18n.t("external_document._plural") %> <span class="badge badge-info"><%= @archival_object.published_external_documents.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @archival_object.digital_objects.length > 0 %>
            <li><a href="#digital_objects"><%= I18n.t("digital_object._plural") %> <span class="badge badge-info"><%= @archival_object.digital_objects.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if children? %>
            <li><a href="#components"><%= I18n.t("resource._public.section.components") %> <span class="badge badge-info"><%= children.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="span9">
      <%= render :partial => "archival_object", 
                 :locals => {
                   :archival_object => @archival_object
                 } %>

      <br/>
      <br/>

    </div>
  </div>
</div>
