$(function () {

  $(document).on("loadedrecordform.aspace", function(event) {

    // allow option sidebar to stay open when 
    // elements are clicked
    $('.record-toolbar').on('click', '.dropdown-submenu input', function(e) {
      e.stopPropagation();
    });

    $('.record-toolbar').on('click', 'a.menu-with-options', function(e) {
      $('form#form-download-ead').submit();
    });
  });

});
