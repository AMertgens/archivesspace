<%= render "shared/form_messages", :object => @group %>

<div class="row-fluid">
  <div class="span3">
  </div>

  <div class="span9 record-pane">
    <h2>New group</h2>

    <%= form_for @group, :as => "group", :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.label_field_pair :group_code %>
    <%= render :partial => "groups/form", :locals => {:f => f} %>
    <% end %>
  </div>
</div>
