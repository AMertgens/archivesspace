<%= render :partial => "shared/breadcrumb", :locals => {:trail => [link_to("Manage Groups", :controller => :groups, :action => :index), "Edit Group"]} %>

<%= render "shared/form_messages", :object => @group %>

<div class="row-fluid">
  <div class="span3">
  </div>

  <div class="span9 record-pane">
    <h2><%= @group.description %> <span class="label label-info">Group</span></h2>

    <%= form_for @group, :as => "group", :url => {:action => :update, :id => @group.id}, :html => {:class => 'form-horizontal'} do |f| %>
   
    <%= render :partial => "groups/form", :locals => {:f => f} %>
    <% end %>
  </div>
</div>
