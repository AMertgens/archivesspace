<%
  record_title = "#{I18n.t("enumerations.event_event_type.#{@event.event_type}")} (#{@event.id})"
%>

<%= setup_context :object => @event, :title => record_title %>

<div class="row-fluid">
   <div class="span3">
     <%= render :partial => "events/sidebar", :formats => [:html], :handlers => [:erb] %>
   </div>
  <div class="span9">
    <%= render :partial => "toolbar", :formats => [:html], :handlers => [:erb] %>
    <div class="record-pane">
      <h2><%= record_title %>  <span class="label label-info"><%= I18n.t("event._singular") %></span></h2>

      <%= readonly_context :event, @event do |readonly| %>
        <%= render :partial => "events/form", :formats => [:html], :handlers => [:erb], :locals => {:form => readonly} %>
      <% end %>
      <%# read_only_view(@event.to_hash) %>
    </div>
  </div>
</div>
