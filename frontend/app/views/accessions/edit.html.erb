<%= setup_context(:object => @accession, :title => @accession.display_string) %>

<%= form_for @accession, :as => "accession", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form', :id => "accession_form"}.merge(update_monitor_params(@accession)) do |f| %>
  <%= form_context :accession, @accession do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "sidebar", :formats => [:html], :handlers => [:erb] %>
      </div>

      <div class="span9">
        <%= render :partial => "accessions/toolbar", :formats => [:html], :handlers => [:erb] %>
        <div class="record-pane">
          <%= link_to_help :topic => "accession" %>
          <h2><%= @accession.display_string %> <span class="label label-info"><%= I18n.t("accession._singular") %></span></h2>
          <input type="hidden" name="_method" value="put" />
          <%= render :partial => "accessions/form", :formats => [:html], :handlers => [:erb], :locals => {:form => form} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
