<%= form_for @collection, :as => "collection", :url=>{:action=>:update}, :html=>{:class=>'form-horizontal'} do |f| %>
   <%= render :partial=>"collections/form_container", :locals=>{:f => f} %>
   <div class="form-actions">            
      <button type="submit" class="btn btn-primary">Save Collection</button>   
      <%= link_to "Cancel", :back, :class=>"btn btn-cancel" %>
   </div>
<% end %>
