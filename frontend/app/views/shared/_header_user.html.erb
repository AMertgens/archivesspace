<% if session[:user] %>
  <li class="dropdown user-container">
     <div class="input-append">
        <span class="user-label"><span class="icon-user"></span> <%= session[:user] %></span>
        <a class="btn dropdown-toggle last" data-toggle="dropdown" href="#"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to I18n.t("navbar.logout"), :controller => "session",:action => "logout"%></li>
          </ul>
     </div>
  </li>
<% else %>
  <li class="dropdown">
    <a class="session-actions dropdown-toggle" href="#" data-toggle="dropdown"><%= I18n.t("navbar.login") %></a>
    <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
       <%= form_tag({:controller => "session",:action => "login"}, :method => "post", :class => "login") do %>
         <div class="control-group">
            <p class="help-inline login-message"><%= I18n.t "navbar.login_fail" %></p>
            <p class="alert alert-success"><%= I18n.t "navbar.login_success" %>.</p>
            <input id="user_username" type="text" name="username" size="30" placeholder="Username" />
            <input id="user_password" type="password" name="password" size="30" placeholder="Password" />
         </div>
         <input class="btn btn-primary" type="submit" name="commit" value="<%= I18n.t("navbar.login") %>" id="login" />
       <% end %>
       <p><%= I18n.t "navbar.register_prefix" %> <%= link_to I18n.t("navbar.register"), {:controller => "users", :action => "new"}, :class => "boring-link" %></p>
    </div>
  </li>
<% end %>
