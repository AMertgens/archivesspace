<% define_template "name_person", jsonmodel_definition(:name_person) do |form| %>
  <div class="subrecord-form-fields agent-name-form">
    <h4 class="subrecord-form-heading">
      <span class="badge badge-info is-authoritive-label"><%= I18n.t("name_person.authorized") %></span>
      <span class="badge badge-info is-display-name-label"><%= I18n.t("name_person.is_display_name") %></span>
    </h4>

    <%= render_aspace_partial :partial => "agents/name_forms/authority_fields_merge_target", :locals => {:form => form} %>

    <%= form.label_and_readonly "name_order" %>                  
    <%= form.label_and_readonly "prefix" %>
    <%= form.label_and_readonly "title" %>
    <%= form.label_and_readonly "primary_name" %>
    <%= form.label_and_readonly "rest_of_name" %>
    <%= form.label_and_readonly "suffix" %>
    <%= form.label_and_readonly "fuller_form" %>
    <%= form.label_and_readonly "number" %>
    <%= form.label_and_readonly "dates" %>
    <%= form.label_and_readonly "language" %>
    <%= form.label_and_readonly "script" %>
    <%= form.label_and_readonly "romanization_enum" %>
    <hr/>
    <%= form.label_and_readonly "qualifier" %>
    <%= form.label_and_readonly "sort_name" %>
    <%= render_aspace_partial :partial => "structured_dates/show", :locals => { :dates => form.obj["use_dates"], :section_title => I18n.t("agent_name.use_dates"), :section_id => "target_name_use_dates", :heading_size => "h4"} %>

    <%= render_aspace_partial :partial => "agent_parallel_names/show", :locals => { :names => form.obj['parallel_names'], :section_id => "target_parallel_names_#{rand(100000)}"} %>
  </div>
<% end %>
