<div class="row-fluid">
  <div class="span12">
    <div class="record-toolbar">
      <% if user_can?('create_repository') %>
        <div class="btn-group pull-left">
          <%= link_to I18n.t("actions.edit"), {:controller => :repositories, :action => :edit, :id => @repository.id}, :class => "btn btn-small btn-primary" %>
        </div>
      <% end %>
      <div class="pull-right">
        <% if session[:repo_id] != @repository.id and @repositories.any?{|r| r['uri'] === @repository.uri} %>
          <%= form_for @repository, :as => "repository", :url => {:action => :select}, :html => {:style => "display: inline;"} do |f| %>
            <button type="submit" class="btn btn-small btn-success"><%= I18n.t("repository._frontend.action.select") %></button>
          <% end %>
        <% end %>
        <% if user_can?('delete_repository') %>
          <div class="btn-group">
            <div class="btn btn-inline-form">
              <%= button_to I18n.t("actions.delete"), {:controller => :repositories, :action => :delete, :id => @repository.id}, :method => :post, :class => "btn btn-small btn-danger delete-record", :"data-confirmation" => true, :"data-title" => I18n.t("actions.delete_confirm_title"), :"data-message" => I18n.t("actions.delete_confirm_message"), :"data-confirm-btn-label" => "#{I18n.t("actions.delete")}", :"data-confirm-btn-class" => "btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
