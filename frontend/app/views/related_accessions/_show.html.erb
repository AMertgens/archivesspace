<%
   section_id = "related_accessions" if section_id.blank?
%>

<section id="<%= section_id %>">
  <h3><%= I18n.t("related_accession._html.plural") %></h3>

  <div class="control-group">
    <label class="control-label"><%= I18n.t "accession._html.plural" %></label>
    <div class="controls token-list">
      <% related_accessions.each_with_index do | accession, index | %>
        <%= render_token :object => accession["_resolved"],
                         :label => link["_resolved"]["title"],
                         :type => "accession",
                         :uri => link["ref"] %>
      <% end %>
    </div>
  </div>

</section>