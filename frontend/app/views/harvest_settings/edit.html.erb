<%= setup_context :trail => [[I18n.t("navbar.manage_harvesting"), :title => I18n.t("navbar.manage_harvesting")]] %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
    <div class="record-pane">
      <h2><%= I18n.t("navbar.manage_harvesting") %></h2>

      <table class="table table-striped table-bordered table-condensed">
        <tbody>
          <tr>
            <td>
              <input id="oai_enable"
                    name="oai_enable"
                    type="checkbox"
                      <% if true %>
                      checked="checked"
                      <% end %> />

            </td>

            <td><%= I18n.t("harvest_options.enable") %></td>
          </tr>
        </tbody>
      </table>

      <br />
      <p><%= I18n.t("harvest_options.set_title") %></p>
      <table class="table table-striped table-bordered table-condensed">
        <tbody>
          <% @enum['enumeration_values'].each do |v| %>
            <tr>
              <td>
                <input id="<%= v['id'] %>"
                       name="<%= v['value'] %>"
                       type="checkbox"
                        <% if true %>
                         checked="checked"
                        <% end %> />
              </td>
              <td><%= v['value'] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
