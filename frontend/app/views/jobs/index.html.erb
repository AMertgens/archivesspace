<%= setup_context(:title => I18n.t("job._plural")) %>

<div class="row-fluid">
  <div class="span12">
    <div class="record-toolbar">
      <div class="pull-right">
        <%= link_to I18n.t("job._frontend.actions.create"), {:controller => :jobs, :action => :new}, :class => "btn btn-small" %>
      </div>
    </div>

    <div class="record-pane">
      <h2><%= I18n.t("job._plural") %></h2>

      <%= render :partial => "shared/flash_messages" %>

      <h3>Active Jobs</h3>
      <% if @active_jobs.length > 0 %>
        <%= render :partial => "jobs/listing", :locals => {:jobs => @active_jobs} %>
      <% else %>
        <p class="alert alert-info">There are no active import jobs.</p>
      <% end %>

      <h3>Archived Jobs</h3>
      <% if @search_data['results'].length > 0 %>
        <%= render :partial => "jobs/listing", :locals => {:jobs => @search_data['results']} %>
        <%= render :partial => "shared/pagination" %>
      <% else %>
        <p class="alert alert-info">
          There are no archived import jobs.
        </p>
      <% end %>
    </div>
  </div>
</div>
